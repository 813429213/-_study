.container {
  padding: 40rpx;
  background-color: #f2f2f2;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.plan-card {
  display: flex;
  width: 100%;
  background-color: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.plan-info {
  width: 80%;
}

.spot-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.detail {
  display: flex;
  margin-bottom: 10rpx;
}

.detail-label {
  font-size: 30rpx;
  color: #666;
  width: 100rpx;
}

.detail-value {
  font-size: 30rpx;
  color: #333;
}

.button-group {
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.button {
  width: 100%;
  height: 60rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-weight: bold;
  text-align: center;
}

.delete-button {
  background-color: #ff4d4d;
  color: white;
}

.navigate-button {
  background-color: #07c160;
  color: white;
}
