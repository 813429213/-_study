/* 页面整体布局 */
.container {
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
  padding-top: 0rpx;
  align-items: center;
}

/* 景点图片样式 */
.spot-image {
  width: 100%;
  height: 500rpx;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
}

/* 景点信息卡片样式 */
.spot-info-card {
  width: 90%;
  background: #ffffff;
  border-radius: 30rpx;
  padding: 40rpx;
  margin-top: -60rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1;
}

.spot-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.spot-description {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 详细信息样式 */
.spot-details {
  margin-top: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.detail-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.detail-title {
  font-weight: bold;
  color: #333;
  width: 160rpx;
  font-size: 30rpx;
}

.detail-content {
  color: #666;
  font-size: 30rpx;
  flex: 1;
}

/* 返回按钮样式 */
.back-button {
  width: 90%;
  height: 90rpx;
  background: linear-gradient(90deg, #4a90e2, #007aff);
  color: white;
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 60rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
}

.buy-button {
  width: 90%;
  height: 90rpx;
  background: linear-gradient(90deg, #4a90e2, #007aff);
  color: white;
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 60rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
}
