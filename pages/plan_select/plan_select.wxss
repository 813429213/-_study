.container {
  padding: 40rpx;
  background-color: #f9f9f9;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.spot-info {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.05);
}

.spot-name {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}

.picker {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 500rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.picker-value {
  color: #333;
  font-size: 32rpx;
  margin-left: 10rpx;
}

.confirm-button {
  width: 100%;
  height: 90rpx;
  background-color: #07c160;
  color: white;
  border-radius: 45rpx;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  line-height: 90rpx;
  margin-top: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}
