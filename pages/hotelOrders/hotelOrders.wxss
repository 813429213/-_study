.orders-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.hotel-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  font-size: 28rpx;
  color: #1296db;
}

.order-info {
  padding-top: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 10rpx;
}

.label {
  color: #666;
  font-size: 28rpx;
  width: 160rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
  flex: 1;
}

.price {
  color: #f60;
  font-size: 32rpx;
  font-weight: bold;
}

.no-orders {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
