.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.search-box {
  display: flex;
  padding: 20rpx;
  background: #fff;
  width: 100%;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  /* border: 1rpx solid #eee; */
  border-radius: 8rpx;
}

.search-btn {
  width: 140rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #fff;
  background: #1296db;
  border-radius: 8rpx;
}

.hotel-list {
  height: calc(100vh - 150rpx);
}

.hotel-card {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.hotel-image {
  width: 100%;
  height: 450rpx;
}

.hotel-info {
  padding: 20rpx;
}

.hotel-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.hotel-rating {
  font-size: 28rpx;
  color: #ff9900;
  margin-bottom: 10rpx;
}

.hotel-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.hotel-address {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.hotel-price {
  display: flex;
  align-items: baseline;
}

.price-unit {
  font-size: 24rpx;
  color: #f44336;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #f44336;
  margin: 0 4rpx;
}

.price-text {
  font-size: 24rpx;
  color: #999;
}