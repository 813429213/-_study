.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f9fa;
}

.map-container {
  height: 45vh;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

.content-container {
  flex: 1;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  margin-top: -20rpx;
  padding: 30rpx;
  position: relative;
  z-index: 2;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* 地址选择区域样式 */
.address-container {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.address-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
}

.address-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.address-dot.start {
  background: #11c75c;
}

.address-dot.end {
  background: #ff4d4f;
}

.address-line {
  position: absolute;
  left: 5rpx;
  top: 32rpx;
  width: 2rpx;
  height: 40rpx;
  background: #e8e8e8;
}

.address-input {
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx 0;
  color: #333333;
}

/* 车型列表样式 */
.car-list {
  max-height: calc(100vh - 45vh - 440rpx);
  padding: 10rpx 0;
}

.car-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.car-item.selected {
  border-color: #1890ff;
  background: #e6f7ff;
}

.car-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.car-main {
  display: flex;
  align-items: center;
  flex: 1;
}

.car-icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;

}

.car-details {
  flex: 1;
}

.car-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.car-desc {
  font-size: 24rpx;
  color: #999999;
  display: block;
}

.car-price-info {
  text-align: right;
}

.car-price {
  font-size: 36rpx;
  font-weight: 500;
  color: #ff4d4f;
  display: block;
  margin-bottom: 8rpx;
}

.car-wait {
  font-size: 24rpx;
  color: #999999;
}

/* 底部按钮区域样式 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.call-car-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  background: #cccccc;
  border-radius: 44rpx;
  border: none;
  padding: 0;
  margin: 0;
}

.call-car-btn.active {
  background: #1296db;
  box-shadow: 0 4rpx 8rpx rgba(18, 150, 219, 0.35);
}

.call-car-btn::after {
  border: none;
}
