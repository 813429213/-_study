.container {
  min-height: 100vh;
  background: #f8f9fd;
  padding-bottom: 120rpx;
}

.booking-summary {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin: 30rpx;
}

.hotel-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.hotel-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.hotel-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.room-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.room-left {
  display: flex;
  align-items: center;
}

.room-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 12rpx;
}

.room-name {
  font-size: 28rpx;
  color: #333;
}

.room-right {
  display: flex;
  align-items: baseline;
}

.room-price {
  font-size: 36rpx;
  color: #f44336;
  font-weight: bold;
}

.price-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.date-info {
  font-size: 26rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
}

.date-range {
  display: flex;
  align-items: center;
}

.calendar-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.nights {
  color: #1296db;
  font-weight: 500;
}

.booking-form {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin: 30rpx;
}

.form-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.picker {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

.price-detail {
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin: 30rpx;
}

.price-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  align-items: center;
}

.price-label {
  display: flex;
  align-items: center;
}

.price-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.total-price {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  font-weight: bold;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  align-items: center;
}

.total-amount {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 24rpx;
  margin-right: 4rpx;
  color: #f44336;
}

.price {
  font-size: 40rpx;
  color: #f44336;
}

.bottom-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background: #1296db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  background: linear-gradient(135deg, #1296db, #0f85c7);
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
} 