/* pages/hotelsearchResult/hotelsearchResult.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.search-header {
  background: #fff;
  padding: 30rpx;
  width: 90%;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.result-count {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.filter-tags {
  display: flex;
  gap: 20rpx;
}

.filter-tags .tag {
  font-size: 26rpx;
  color: #666;
  padding: 8rpx 24rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
}

.filter-tags .tag.active {
  color: #fff;
  background: #1296db;
}

.hotel-list {
  height: calc(100vh - 200rpx);
}

.hotel-card {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.hotel-image {
  width: 100%;
  height: 300rpx;
}

.hotel-info {
  padding: 20rpx;
}

.hotel-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.hotel-rating {
  margin-bottom: 10rpx;
}

.rating {
  font-size: 32rpx;
  color: #ff9900;
  font-weight: bold;
  margin-right: 10rpx;
}

.rating-text {
  font-size: 26rpx;
  color: #ff9900;
}

.hotel-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.hotel-tags .tag {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.hotel-address {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.hotel-price {
  display: flex;
  align-items: baseline;
}

.price-unit {
  font-size: 24rpx;
  color: #f44336;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #f44336;
  margin: 0 4rpx;
}

.price-text {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.suggestion {
  font-size: 26rpx;
  color: #666;
}